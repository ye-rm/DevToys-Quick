<template>
  <div class="page">
    <!-- Header with Back Button -->
    <div class="header">
      <div class="icon-btn" onclick="goBack">
        <text class="back-icon">â€¹</text>
      </div>
      <text class="title">Base64 Converter</text>
      <!-- Invisible spacer to balance the header so title stays centered -->
      <div class="icon-btn placeholder"></div>
    </div>

    <!-- Mode Switcher (Tabs) -->
    <div class="tabs">
      <div class="tab-item {{mode === 'encode' ? 'active' : ''}}" onclick="setMode('encode')">
        <text class="tab-text {{mode === 'encode' ? 'active-text' : ''}}">Encode</text>
      </div>
      <div class="tab-item {{mode === 'decode' ? 'active' : ''}}" onclick="setMode('decode')">
        <text class="tab-text {{mode === 'decode' ? 'active-text' : ''}}">Decode</text>
      </div>
    </div>

    <!-- Input Area -->
    <text class="label">Input {{mode === 'encode' ? '(Text)' : '(Base64)'}}</text>
    <textarea 
      class="input-area" 
      placeholder="{{mode === 'encode' ? 'Type text to encode...' : 'Paste Base64 to decode...'}}" 
      onchange="handleInput" 
      value="{{inputText}}">
    </textarea>

    <!-- Output Area -->
    <text class="label">Output</text>
    <textarea class="output-area" readonly="true">{{outputText}}</textarea>

    <!-- Copy Button -->
    <div class="footer">
      <input type="button" class="btn" value="Copy Result" onclick="copyToClipboard" />
    </div>
  </div>
</template>

<script>
import clipboard from '@system.clipboard'
import prompt from '@system.prompt'
import router from '@system.router' // 1. Imported Router

export default {
  data: {
    mode: 'encode',
    inputText: '',
    outputText: ''
  },

  /**
   * 2. Added Navigation Logic
   */
  goBack() {
    router.back();
  },

  setMode(newMode) {
    if (this.mode === newMode) return;
    this.mode = newMode;
    this.inputText = '';
    this.outputText = '';
  },

  handleInput(evt) {
    this.inputText = evt.value;
    this.convert();
  },

  convert() {
    if (!this.inputText) {
      this.outputText = '';
      return;
    }
    try {
      if (this.mode === 'encode') {
        this.outputText = btoa(encodeURIComponent(this.inputText).replace(/%([0-9A-F]{2})/g,
          function toSolidBytes(match, p1) {
            return String.fromCharCode('0x' + p1);
        }));
      } else {
        this.outputText = decodeURIComponent(atob(this.inputText).split('').map(function(c) {
            return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
        }).join(''));
      }
    } catch (e) {
      this.outputText = "Error: Invalid input";
    }
  },

  copyToClipboard() {
    if (!this.outputText) {
      prompt.showToast({ message: 'Nothing to copy' });
      return;
    }
    clipboard.set({
      text: this.outputText,
      success: () => {
        prompt.showToast({ message: 'Copied!' })
      }
    })
  }
}
</script>

