<template>
  <div class="page">
    <!-- Header with Back Button -->
    <div class="header">
      <div class="icon-btn" onclick="goBack">
        <text class="back-icon">â€¹</text>
      </div>
      <text class="title">Base64 Converter</text>
      <div class="icon-btn placeholder"></div>
    </div>

    <!-- Mode Switcher (Tabs) -->
    <div class="tabs">
      <div class="tab-item {{mode === 'encode' ? 'active' : ''}}" onclick="setMode('encode')">
        <text class="tab-text {{mode === 'encode' ? 'active-text' : ''}}">Encode</text>
      </div>
      <div class="tab-item {{mode === 'decode' ? 'active' : ''}}" onclick="setMode('decode')">
        <text class="tab-text {{mode === 'decode' ? 'active-text' : ''}}">Decode</text>
      </div>
    </div>

    <!-- Input Area -->
    <text class="label">Input {{mode === 'encode' ? '(Text)' : '(Base64)'}}</text>
    <textarea 
      class="input-area" 
      placeholder="{{mode === 'encode' ? 'Type text to encode...' : 'Paste Base64 to decode...'}}" 
      onchange="handleInput" 
      value="{{inputText}}">
    </textarea>

    <!-- Output Area -->
    <text class="label">Output</text>
    <textarea class="output-area" readonly="true">{{outputText}}</textarea>

    <!-- Copy Button -->
    <div class="footer">
      <input type="button" class="btn" value="Copy Result" onclick="copyToClipboard" />
    </div>
  </div>
</template>

<script>
import router from '@system.router'
import clipboard from '@system.clipboard'
import prompt from '@system.prompt'
// 1. Import CryptoJS to handle Base64 properly
import CryptoJS from 'crypto-js'

export default {
  data: {
    mode: 'encode',
    inputText: '',
    outputText: ''
  },

  goBack() {
    router.back();
  },

  setMode(newMode) {
    if (this.mode === newMode) return;
    this.mode = newMode;
    // Clear fields on mode switch
    this.inputText = '';
    this.outputText = '';
  },

  handleInput(evt) {
    this.inputText = evt.value;
    this.convert();
  },

  convert() {
    if (!this.inputText) {
      this.outputText = '';
      return;
    }

    try {
      if (this.mode === 'encode') {
        // 2. ENCODE: Parse string as UTF-8, then turn to Base64
        const wordArry = CryptoJS.enc.Utf8.parse(this.inputText);
        this.outputText = CryptoJS.enc.Base64.stringify(wordArry);
      } else {
        // 3. DECODE: Parse Base64, then turn to UTF-8 string
        const parsedWordArray = CryptoJS.enc.Base64.parse(this.inputText);
        // Convert back to string (Handles emojis/Chinese correctly)
        this.outputText = CryptoJS.enc.Utf8.stringify(parsedWordArray);
        
        // Optional: If output is empty but input wasn't, it might be binary data
        if (!this.outputText && this.inputText) {
           // Fallback for binary data if needed, usually Hex is better for binary
           // this.outputText = CryptoJS.enc.Hex.stringify(parsedWordArray);
        }
      }
    } catch (e) {
      // Handle Malformed Input
      this.outputText = "Error: Invalid input format";
    }
  },

  copyToClipboard() {
    if (!this.outputText) {
      prompt.showToast({ message: 'Nothing to copy' });
      return;
    }
    clipboard.set({
      text: this.outputText,
      success: () => {
        prompt.showToast({ message: 'Copied!' })
      }
    })
  }
}
</script>

