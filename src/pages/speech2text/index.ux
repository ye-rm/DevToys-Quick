<template>
  <div class="page">
    <!-- Header -->
    <div class="header">
      <div class="icon-btn" onclick="goBack">
        <text class="back-icon">â€¹</text>
      </div>
      <text class="title">Speech to Text</text>
      <div class="icon-btn placeholder"></div>
    </div>

    <!-- Output Area -->
    <div class="card output-card">
      <!-- Added onchange to sync manual typing -->
      <textarea 
        class="output-area" 
        placeholder="Tap the mic and speak..." 
        value="{{textOutput}}"
        onchange="onTextChange">
      </textarea>
      
      <div class="action-row">
        <div class="mini-btn" onclick="copyText">
          <text class="mini-btn-text">Copy</text>
        </div>
        <div class="mini-btn" onclick="clearText">
          <text class="mini-btn-text">Clear</text>
        </div>
      </div>
    </div>

    <!-- Microphone Control -->
    <div class="mic-container">
      <div class="status-text-wrapper">
        <text class="status-text" style="color: {{statusColor}}">{{status}}</text>
      </div>

      <div class="mic-wrapper">
        <div class="{{isListening ? 'ripple-ring' : ''}}"></div>
        <div class="mic-btn {{isListening ? 'mic-active' : ''}}" onclick="toggleAsr">
          <image class="mic-icon" src="/assets/icons/mic.svg"></image>
        </div>
      </div>
      
      <text class="hint-text">Tap to Start / Stop</text>
    </div>

  </div>
</template>

<script>
import router from '@system.router'
import asr from '@service.asr'
import prompt from '@system.prompt'
import clipboard from '@system.clipboard'
import vibrator from '@system.vibrator'

export default {
  data: {
    textOutput: '',
    previousText: '', // Stores text before current dictation session
    isListening: false,
    status: 'Ready',
    statusColor: '#666666'
  },

  onInit() {
    this.initAsrListeners();
  },

  onDestroy() {
    this.stopAsr();
  },

  goBack() {
    router.back()
  },

  // Keep model in sync if user types manually
  onTextChange(e) {
    this.textOutput = e.value;
  },

  initAsrListeners() {
    const that = this;

    // 1. FINAL RESULT
    asr.oncompleteresult = ({ result }) => {
      // Combine what we had before + new result
      that.textOutput = that.previousText + result; 
      that.updateStatus('Done', '#28a745'); // Green
      that.stopUiState();
    };

    // 2. ERROR HANDLING (The Hint Logic)
    asr.onerror = (error) => {
      that.stopUiState();
      let msg = '';
      
      // Common ASR Error Codes
      switch (parseInt(error.errorcode)) {
        case 1003: // Network timeout / No speech
        case 1004: // No speech recognized
          msg = 'No speech detected. Please speak louder.';
          break;
        case 1001: // Network error
          msg = 'Network error. Check connection.';
          break;
        case 1002: // Service unavailable
          msg = 'Voice service unavailable.';
          break;
        default:
          msg = `Error: ${error.errorcode}`;
      }

      that.updateStatus('Failed', '#ff3b30');
      // Show the specific hint to the user
      prompt.showToast({ message: msg });
    };

    // 3. REAL-TIME TYPING EFFECT
    asr.onpartialresult = ({ result }) => {
      if (result) {
        // Display: Old Text + Current Speech
        that.textOutput = that.previousText + result;
      }
    };
  },

  toggleAsr() {
    if (this.isListening) {
      this.stopAsr();
    } else {
      this.startAsr();
    }
  },

  startAsr() {
    const that = this;
    
    this.isListening = true;
    this.updateStatus('Initializing...', '#007aff');
    
    // Save what was already in the textbox so we don't delete it
    // We add a space if there is existing text
    this.previousText = this.textOutput + (this.textOutput ? ' ' : ''); 

    asr.start({
      lang: 'zh_CN', // Change to 'en_US' if you want English
      success: function() {
        vibrator.vibrate({ mode: 'short' });
        that.updateStatus('Listening...', '#ff3b30'); // Red while active
      },
      fail: function(data, code) {
        that.updateStatus('Start Failed', '#ff3b30');
        that.stopUiState();
        prompt.showToast({ message: 'Could not access microphone' });
      }
    });
  },

  stopAsr() {
    if (!this.isListening) return;
    asr.stop();
    // Note: We don't call stopUiState here immediately, 
    // we wait for oncompleteresult or onerror to trigger.
  },

  stopUiState() {
    this.isListening = false;
    // Sync previous text for next run
    this.previousText = this.textOutput;
  },

  updateStatus(text, color) {
    this.status = text;
    this.statusColor = color;
  },

  copyText() {
    if (!this.textOutput) return;
    clipboard.set({
      text: this.textOutput,
      success: () => prompt.showToast({ message: 'Copied to clipboard' })
    });
  },

  clearText() {
    this.textOutput = '';
    this.previousText = '';
    this.updateStatus('Ready', '#666666');
  }
}
</script>

